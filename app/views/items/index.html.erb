<div class="">
  <div class="page-title mb-4">
    <h1>Available Items</h1>
  </div>
</div>

<% if @items.blank? %>
  <h1 class="mt-5 mb-5">No items found</h1>
<% else %>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4 col-sm-6 col-lg-3 col-12">
        <div class="card" style="width: 18rem; height: 100%;">
          <% image = item.images.attached? ? item.images.first : 'product-default.png' %>
          <%= image_tag image, class: "card-img-top", alt: "Card image cap", style: 'max-height: 200px;' %>
          <div class="card-body">
            <h5 class="card-title"><%= item.to_s %></h5>
            <p class="card-text"><%= item.description %></p>
            <a href="#" class="btn btn-primary">Item detail</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
